<ul>
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <input type="checkbox" checked/>
      <% else %>
        <input type="checkbox"/>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new task:', tasks_new_path %>
